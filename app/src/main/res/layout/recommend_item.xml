<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_margin="@dimen/layout_margin_10"
              android:layout_height="wrap_content">
    <TextView
        android:id="@+id/title_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_10"
        android:textColor="@color/black"
        android:textSize="@dimen/textSize_22"
        android:maxLines="2"
        android:ellipsize="end"/>

    <TextView
    android:id="@+id/content_tv"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/padding_10"
    android:textSize="@dimen/textSize_16"
    android:maxLines="2"
    android:ellipsize="end"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/paddingTop_5">
        <TextView
            android:id="@+id/read_mun"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:paddingTop="@dimen/paddingTop_5"
            android:paddingBottom="@dimen/paddingBottom_5"
            />
        <TextView
            android:id="@+id/reply_mun"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingTop="@dimen/paddingTop_5"
            android:paddingBottom="@dimen/paddingBottom_5"
            />
        <TextView
            android:id="@+id/comment"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/paddingTop_5"
            android:paddingBottom="@dimen/paddingBottom_5"
            android:layout_weight="1"
            android:gravity="right"
            />
    </LinearLayout>

</LinearLayout>