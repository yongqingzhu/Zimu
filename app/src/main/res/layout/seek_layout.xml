<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:background="@color/_white"
        android:orientation="horizontal">
        <SearchView
            android:id="@+id/searchView"
            android:layout_margin="@dimen/layout_margin_10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:iconifiedByDefault="false"
            android:focusable="false"
            android:queryHint="@string/searchView_hit_text" />
        <Button
            android:id="@+id/search_btn_back"
            android:layout_marginRight="@dimen/layout_marginRight_10"
            android:layout_marginTop="@dimen/layout_marginTop_10"
            android:layout_marginBottom="@dimen/layout_marginBottom_10"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/seek_Button_text"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/seek_list_linear"
        android:layout_width="match_parent"
        android:visibility="gone"
        android:layout_height="@dimen/linearlayout_height_0"
        android:layout_weight="1">
        <ListView
            android:id="@+id/listView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />
    </LinearLayout>

</LinearLayout>