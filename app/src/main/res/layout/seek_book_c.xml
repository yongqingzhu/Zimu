<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="@dimen/imageview_width_80"
            android:layout_height="@dimen/imageview_height_120"
            android:src="@mipmap/ic_launcher"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:id="@+id/icon_article1"/>

        <TextView
            android:text="TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/icon_article1"
            android:layout_toStartOf="@+id/icon_article1"
            android:maxLines="1"
            android:ellipsize="end"
            android:padding="@dimen/padding"
            android:textSize="@dimen/textSize_30"
            android:id="@+id/tv_name_article"/>

        <TextView
            android:text="TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding"
            android:maxLines="2"
            android:textSize="@dimen/textSize_20"
            android:ellipsize="end"
            android:id="@+id/tv_content1_article"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_toLeftOf="@+id/icon_article1"
            android:layout_toStartOf="@+id/icon_article1"
            android:layout_below="@+id/tv_name_article"/>

        <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_content1_article"
            android:layout_toLeftOf="@+id/icon_article1"
            android:layout_toStartOf="@+id/icon_article1"
            android:textSize="@dimen/textSize_16"
            android:id="@+id/tv_mun_article"/>


    </RelativeLayout>

</LinearLayout>