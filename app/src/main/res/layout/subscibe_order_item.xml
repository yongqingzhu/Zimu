<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:paddingTop="@dimen/paddingTop_15"
                android:paddingLeft="@dimen/paddingBottom_10"
                android:paddingRight="@dimen/paddingRight_10"
                android:layout_height="wrap_content">

    <ImageView
        android:layout_width="@dimen/imageview_width_80"
        android:layout_height="@dimen/imageview_height_120"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/teacher_iamgeview"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_6"
        android:maxLines="1"
        android:ellipsize="end"
        android:textSize="@dimen/textSize_20"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/teacher_iamgeview"
        android:layout_toEndOf="@+id/teacher_iamgeview"
        android:id="@+id/teacher_name"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/teacher_name"
        android:padding="@dimen/padding_6"
        android:maxLines="1"
        android:textSize="@dimen/textSize_18"
        android:ellipsize="end"
        android:layout_toRightOf="@+id/teacher_iamgeview"
        android:layout_toEndOf="@+id/teacher_iamgeview"
        android:id="@+id/teacher_content"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/teacher_content"
        android:layout_toRightOf="@+id/teacher_iamgeview"
        android:layout_toEndOf="@+id/teacher_iamgeview"
        android:padding="@dimen/padding_6"
        android:maxLines="1"
        android:ellipsize="end"
        android:id="@+id/refesh_time"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/refesh_time"
        android:layout_toRightOf="@+id/teacher_iamgeview"
        android:layout_toEndOf="@+id/teacher_iamgeview"
        android:padding="@dimen/padding_6"
        android:maxLines="1"
        android:ellipsize="end"
        android:textSize="@dimen/textSize_18"
        android:id="@+id/baby_reason"/>


</RelativeLayout>